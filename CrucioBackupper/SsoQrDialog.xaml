<Window x:Class="CrucioBackupper.SsoQrDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrucioBackupper"
        mc:Ignorable="d"
        Title="扫码登录" Height="320" Width="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="{Binding ImageUrl}"/>
        <Label Grid.Row="1" HorizontalContentAlignment="Center">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                请使用快点阅读App（移动端）进行扫码登录<LineBreak />扫描入口：我的 → 右上角设置 → 扫一扫
            </TextBlock>
        </Label>
    </Grid>
</Window>
